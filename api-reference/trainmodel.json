{
  "openapi": "3.0.1",
  "info": {
    "title": "Train Model",
    "version": "1.0.0",
    "description": "API to train a voice model quickly with specified attributes and files."
  },
  "paths": {
    "/v1/models/train": {
      "post": {
        "summary": "Train a Voice Model",
        "operationId": "FastTrainModel",
        "tags": ["Model Training"],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The name of the model to be trained.",
            "example": "FastVoiceModel123"
          },
          {
            "name": "languageCode",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Language code of the voice model.",
            "example": "en-US"
          },
          {
            "name": "gender",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["male", "female"]
            },
            "description": "Gender of the voice model.",
            "example": "female"
          },
          {
            "name": "audioFile",
            "in": "formData",
            "required": true,
            "schema": {
              "type": "string",
              "format": "binary"
            },
            "description": "The audio file to train the voice model."
          },
          {
            "name": "imageFile",
            "in": "formData",
            "required": false,
            "schema": {
              "type": "string",
              "format": "binary"
            },
            "description": "Optional image file representing the voice model."
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Bearer token for authentication.",
            "example": "Bearer eyJhbGciOiJIUzI1NiIsInR..."
          }
        ],
        "responses": {
          "200": {
            "description": "Voice model training successfully initiated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FastTrainModelRespModel"
                },
                "examples": {
                  "example-1": {
                    "summary": "Success Response",
                    "value": {
                      "status": "success",
                      "modelId": "model123",
                      "message": "Training has started for the model."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing or invalid parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid or missing Authorization header.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "500": {
            "description": "Server error - unable to process the request.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FastTrainModelRespModel": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "modelId": {
            "type": "string",
            "example": "model123"
          },
          "message": {
            "type": "string",
            "example": "Training has started for the model."
          }
        }
      },
      "ErrorModel": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Invalid file format."
          },
          "details": {
            "type": "string",
            "example": "The provided audio file format is not supported."
          }
        }
      }
    }
  }
}
