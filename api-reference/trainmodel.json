{
  "openapi": "3.0.1",
  "info": {
    "title": "Train Model",
    "version": "1.0.0",
    "description": "API for initiating a user-specific fast train model."
  },
  "servers": [
    {
      "url": "https://models.fineshare.com",
      "description": "Models API Server"
    }
  ],
  "paths": {
    "/api/userfasttrainmodel": {
      "post": {
        "summary": "User Fast Train Model",
        "operationId": "UserFastTrainModel",
        "tags": ["Model"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the model."
                  },
                  "languageCode": {
                    "type": "string",
                    "description": "Language code for the model, e.g., 'en-US'."
                  },
                  "gender": {
                    "type": "string",
                    "enum": ["male", "female"],
                    "description": "Gender of the voice."
                  },
                  "audioFile": {
                    "type": "string",
                    "format": "binary",
                    "description": "Audio file for training."
                  },
                  "imageFile": {
                    "type": "string",
                    "format": "binary",
                    "description": "Optional image file associated with the model."
                  }
                },
                "required": ["name", "languageCode", "gender", "audioFile"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Model successfully initiated for training.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid or missing parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing Authorization header.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error - Model training could not be initiated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Model training initiated successfully."
          },
          "modelId": {
            "type": "string",
            "example": "model_12345"
          }
        }
      },
      "ErrorModel": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Invalid parameters."
          },
          "details": {
            "type": "string",
            "example": "The 'audioFile' field is required."
          }
        }
      }
    }
  }
}
