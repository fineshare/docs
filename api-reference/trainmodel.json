{
  "openapi": "3.0.1",
  "info": {
    "title": "Train Model",
    "version": "1.0.0",
    "description": "API to quickly train a voice model with specified attributes and audio input."
  },
  "paths": {
    "/v1/models/train": {
      "post": {
        "summary": "Train a Voice Model",
        "operationId": "FastTrainModel",
        "tags": ["Model Training"],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Bearer token for authentication.",
            "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cC..."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "The name of the model to be trained.",
                    "example": "FastVoiceModel123"
                  },
                  "languageCode": {
                    "type": "string",
                    "description": "Language code for the voice model.",
                    "example": "en-US"
                  },
                  "gender": {
                    "type": "string",
                    "enum": ["male", "female"],
                    "description": "Gender of the voice model.",
                    "example": "female"
                  },
                  "audioFile": {
                    "type": "string",
                    "format": "binary",
                    "description": "The audio file to train the model."
                  },
                  "imageFile": {
                    "type": "string",
                    "format": "binary",
                    "description": "Optional image file representing the voice model."
                  }
                },
                "required": ["name", "languageCode", "gender", "audioFile"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Voice model training successfully initiated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FastTrainModelResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing or invalid parameters.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid or missing Authorization header.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "500": {
            "description": "Server error - unable to process the request.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FastTrainModelResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "modelId": {
            "type": "string",
            "example": "model123"
          },
          "message": {
            "type": "string",
            "example": "Model training initiated successfully."
          }
        }
      },
      "ErrorModel": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Invalid file format."
          },
          "details": {
            "type": "string",
            "example": "The provided audio file format is not supported."
          }
        }
      }
    }
  }
}
